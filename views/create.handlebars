{{> navbar-create }}

<div class="container">
    <div class="jumbotron recipe mx-auto w-100 bg-papyrus border border-warning rounded-0">
        <h2>New Recipe</h2>
        <hr>
        <form class="create-form">
            <div class="form-group">
                <label class="font-weight-bold my-2" for="title">Title:</label>
                <input type="text" class="form-control rounded-0" id="title" name="title"
                    placeholder="Enter the name of the recipe.">
            </div>
            <div class="form-group">
                <label class="font-weight-bold my-2" for="ingredients">Ingredients:</label>
                <textarea id="ingredients" class="form-control rounded-0" name="ingredients" rows="8" cols="40"
                    placeholder="Enter a list of ingredients separated by commas."></textarea>
            </div>
            <div class="form-group">
                <label class="font-weight-bold my-2" for="directions">Directions:</label>
                <textarea id="directions" class="form-control rounded-0" name="directions" rows="8" cols="40"
                    placeholder="Enter directions."></textarea>
            </div>
            <div class="form-group">
                <label class="font-weight-bold my-2" for="prep_time">Prep Time: (minutes)</label>
                <input type="number" class="form-control w-small-number rounded-0" id="prep_time" name="prep_time"
                    min="1" value="1">
            </div>
            <div class="form-group">
                <label class="font-weight-bold my-2" for="servings">Servings:</label>
                <input type="number" class="form-control w-small-number rounded-0" id="servings" name="servings" min="1"
                    value="1">
            </div>
            <button class="btn btn-warning btn-custom-size rounded-0 mt-2" id="add-recipe" type="submit">
                Submit
            </button>
        </form>
    </div>
</div>

{{> modal-center }}

<script src="/assets/js/app.js"> </script>